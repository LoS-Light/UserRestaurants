<link rel="stylesheet" href="/css/show-styles.css">

<header>
    <!-- navigation -->
    <nav class="navbar navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png" width="30" height="30" class="d-inline-block align-top" alt="好。吃">
                我的餐廳清單
            </a>
        </div>
    </nav>

    <div class="banner"></div>
</header>

<h1 id="title-restaurant" class="mb-1 restaurant-show-title">{{rest.name}}</h1>
<div id="container-restaurant" class="container">
    <div class="row">
        <div class="col-12 col-md-10 mx-auto">

            <p class="mb-1">
                <span class="text-secondary">
                    <i class="fas fa-utensils pr-2"></i>
                    類別：
                </span>
                {{rest.category.name}}
            </p>

            <p class="mb-1">
                <span class="text-secondary">
                    <i class="fas fa-map-marker-alt pr-2"></i>
                    地址：
                </span>
                {{rest.profile.location}}
                <a href="{{rest.profile.googleMap}}" class="text-secondary" target="_blank">
                    <i class="fas fa-location-arrow pr-2 fa-xs"></i>
                </a>
            </p>

            <p class="mb-1">
                <span class="text-secondary">
                    <i class="fas fa-mobile-alt pr-2"></i>
                    電話：
                </span>
                {{rest.profile.phone}}
            </p>

            <p class="mb-5">
                {{rest.profile.description}}
            </p>

            <img class="rounded mx-auto d-block mb-4 w-100" src="{{rest.image}}" alt="{{rest.name}}" style="max-width: 600px;">
        </div>
    </div>
</div>

<script src="/scripts/image-error-handler.js"></script>