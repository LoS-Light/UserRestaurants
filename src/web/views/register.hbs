<header style="position: absolute; top: 0; left: 0; right: 0">
    {{#if flashError}}
    <div class="alert alert-danger d-flex justify-content-between p-1 m-0 fade show" role="alert" style="border-radius: 0;">
        <div>
            <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Error:" style="width: 1.25rem; height: 1.25rem; margin: auto; margin-top: -4px;">
                <use xlink:href="#exclamation-triangle-fill" />
            </svg>
            <span>
                {{flashError}}
            </span>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
</header>

<div class="d-lg-flex half">
    <div class="bg order-1 order-md-2" style="background-image: url('icomoon/images/bg_1.jpg');"></div>
    <div class="contents order-2 order-md-1">
        <div class="container">
            <div class="row align-items-center justify-content-center position-relative">
                <div class="col-md-7">
                    <div class="mb-5">
                        <h3>Sign Up</h3>
                        <p>Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
                    </div>
                    <form action="/register" method="post">
                        <div class="form-group first">
                            <label for="email" style="padding-left: 0.6rem;">Email</label>
                            <input type="email" pattern="[a-z0-9]+@[a-z]+\.[a-z]{2,4}$" class="form-control" id="email" name="email" style="padding-left: 5rem;" maxlength="32"
                                placeholder="example1234@gmail.com" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" style="padding-left: 5rem;" minlength="8" maxlength="16" placeholder="12345678"
                                pattern="^[^\W_]+$" required>
                        </div>
                        <div class="form-group last mb-5">
                            <label for="name" style="padding-left: 0.6rem;">Name</label>
                            <input type="text" class="form-control" id="name" name="name" style="padding-left: 5rem;" maxlength="16">
                        </div>

                        <input type="submit" value="Register" class="btn btn-primary w-100 mb-5">

                        <span class="d-block text-center my-4 text-secondary mt-5">&mdash; Already a member ? &mdash;</span>
                        <div class="social-login">
                            <a href="/login" class="twitter btn d-flex justify-content-center align-items-center">
                                Login
                            </a>
                        </div>
                    </form>
                </div>
                <footer class="text-secondary" style="position: absolute; bottom: 0; padding-bottom: 4px; font-size: 0.9rem; text-align: center;">
                    Copyright 2013-2023 colorlib.com | Rok Krivec | Login Form V06
                </footer>
            </div>
        </div>
    </div>
</div>